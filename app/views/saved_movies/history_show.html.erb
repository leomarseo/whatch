<!-- render partial with the result show -->
<!-- define locals used in partial -->
<%= render layout:"layouts/result_show", locals: {
  queried_actors: [],
  queried_directors: [],
  queried_genres: [],

  current_suggestion: @current_movie,
  movie_director: @current_movie[0].movie.director,
  starring_actors: @current_movie[0].movie.starring_actors,

  # NOTE: if the number_of_buttons you specify is 2 or 3, you can delete the lines for buttons you don't need
  # e.g., if you need only two buttons, you can delete all lines that start with "third_button" and "fourth_button"
  number_of_buttons: 2,
  multiple_cards: false,

  first_button_path: history_destroy_path(id: @current_movie.first.id), remote:true,
  first_button_image: "icons/pass_action.svg",
  first_button_class: "history-remove-action",
  first_button_label: "remove",
  first_button_method: :delete,

  second_button_path: history_update_path(id: @current_movie.first.id),
  second_button_image: @rating, #"icons/disliked.svg",
  second_button_class: "history-change-rating-action",
  second_button_label: "rate",
  second_button_method: :patch

  } do %>
<% end %>
