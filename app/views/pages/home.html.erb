<h1>Pages#home2</h1>
<p>Find me in app/views/pages/home.html.erb</p>


<!-- below is a dropdown menu for the user to select the filters to include or exclude in the search -->
<button id="actor-btn" data-value="actors">Actors</button>
<button id="director-btn" data-value="directors">Directors</button>
<button id="genre-btn" data-value="genres">Genres</button>
<button id="watch-btn">Whatch Now!!</button>
<!-- the searchbar and the "add/remove" buttons are created after the user selects an option from the menu above -->



<div id="selection-wrapper">
  <div id="all-selections">
    <div class="selection"></div>
  </div>
</div>

<div id="actor-input" style="display: none;" data-actorsnames="<%= @actors_names.to_json %>" data-actorsphotos="<%= @actors_photos.to_json %>">
  <input id="actor-input-field" type="text" placeholder="search actors">
  <button id="actor-add-button">search movies with this actor</button>
  <button id="actor-remove-button">search movies without this actor</button>
</div>

<div id="director-input" style="display: none;" data-directorsnames="<%= @directors_names.to_json %>" data-directorsphotos="<%= @directors_photos.to_json %>">
  <input id="director-input-field" type="text" placeholder="search directors">
  <button id="director-add-button">search movies with this director</button>
  <button id="director-remove-button">search movies without this director</button>
</div>

<div id="genre-input" style="display: none;" data-genresnames="<%= @genres_names.to_json %>" data-genresphotos="<%= @genres_photos.to_json %>">
  <input id="genre-input-field" type="text" placeholder="search genres">
  <button id="genre-add-button">search movies with this genre</button>
  <button id="genre-remove-button">search movies without this genre</button>
</div>

<!-- this form should become hidden later, when finishing the frontend -->
</div>
